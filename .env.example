# Caller-ID Rotation API Configuration
# Copy this file to .env and update with your actual values

# ============= API Settings =============
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ============= Database Settings =============
POSTGRES_USER=callerid_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=callerid_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ============= Redis Settings =============
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============= Security Settings =============
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ADMIN_TOKEN=your_admin_token_here_change_this_to_something_secure

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============= Rate Limiting =============
# Reservation TTL in seconds (default: 300 = 5 minutes)
DEFAULT_RESERVATION_TTL=300

# Max requests per agent per minute
DEFAULT_RATE_LIMIT_PER_AGENT=100

# ============= Caller-ID Settings =============
# Default limits for new caller-IDs
DEFAULT_HOURLY_LIMIT=100
DEFAULT_DAILY_LIMIT=500

# ============= CORS Settings =============
# Comma-separated list of allowed origins (use * for all)
ALLOWED_ORIGINS=*
